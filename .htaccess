# The contents of the file: /wordpress-blog/wordpress-blog/.htaccess

# BEGIN WordPress
<IfModule mod_rewrite.c>
RewriteEngine On
RewriteBase /
RewriteRule ^index\.php$ - [L]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /index.php [L]
</IfModule>
# END WordPress

# Additional directives can be added below as needed.

# BEGIN Custom Cache Control for Dynamic Content
# Prevent aggressive caching of HTML pages to ensure category menu updates appear
<IfModule mod_headers.c>
  # Don't cache HTML files aggressively
  <FilesMatch "\.(html|htm|php)$">
    Header set Cache-Control "public, max-age=300, must-revalidate"
  </FilesMatch>
  
  # Cache static assets longer
  <FilesMatch "\.(css|js|jpg|jpeg|png|gif|webp|svg|woff|woff2|ttf|eot|ico)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
</IfModule>
# END Custom Cache Control for Dynamic Content