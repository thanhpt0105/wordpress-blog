{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"settings": {
		"appearanceTools": true,
		"custom": {
			"layout": {
				"contentWidth": "740px"
			}
		},
		"color": {
			"duotone": [],
			"gradients": [],
			"palette": [
				{
					"slug": "foreground",
					"name": "Base Text",
					"color": "#111111"
				},
				{
					"slug": "muted",
					"name": "Muted Text",
					"color": "#444444"
				},
				{
					"slug": "background",
					"name": "Background",
					"color": "#ffffff"
				},
				{
					"slug": "surface",
					"name": "Surface",
					"color": "#f5f5f5"
				},
				{
					"slug": "accent",
					"name": "Accent",
					"color": "#1a8917"
				},
				{
					"slug": "dark-background",
					"name": "Dark Background",
					"color": "#121212"
				},
				{
					"slug": "dark-surface",
					"name": "Dark Surface",
					"color": "#1e1e1e"
				},
				{
					"slug": "dark-foreground",
					"name": "Dark Text",
					"color": "#f0f0f0"
				}
			]
		},
		"layout": {
			"contentSize": "740px",
			"wideSize": "1100px"
		},
		"spacing": {
			"units": ["px", "em", "rem", "%", "vh", "vw"],
			"blockGap": "1.5rem",
			"margin": true,
			"padding": true
		},
		"typography": {
			"dropCap": true,
			"fluid": true,
			"fontFamilies": [
				{
					"slug": "arial-sans",
					"name": "Arial",
					"fontFamily": "\"Arial\", \"Helvetica Neue\", Helvetica, sans-serif"
				},
				{
					"slug": "arial-serif",
					"name": "Arial (Serif Alt)",
					"fontFamily": "\"Arial\", \"Helvetica Neue\", Helvetica, sans-serif"
				},
				{
					"slug": "mono",
					"name": "Mono",
					"fontFamily": "\"Fira Code\", \"SFMono-Regular\", \"Menlo\", \"Consolas\", monospace"
				}
			],
			"fontSizes": [
				{
					"slug": "xs",
					"name": "XS",
					"size": "0.875rem",
					"fluid": {
						"min": "0.8rem",
						"max": "0.9rem"
					}
				},
				{
					"slug": "sm",
					"name": "Small",
					"size": "1rem",
					"fluid": {
						"min": "0.95rem",
						"max": "1.05rem"
					}
				},
				{
					"slug": "md",
					"name": "Medium",
					"size": "1.125rem",
					"fluid": {
						"min": "1rem",
						"max": "1.2rem"
					}
				},
				{
					"slug": "lg",
					"name": "Large",
					"size": "1.5rem",
					"fluid": {
						"min": "1.3rem",
						"max": "1.6rem"
					}
				},
				{
					"slug": "xl",
					"name": "XL",
					"size": "2rem",
					"fluid": {
						"min": "1.8rem",
						"max": "2.3rem"
					}
				},
				{
					"slug": "xxl",
					"name": "XXL",
					"size": "3rem",
					"fluid": {
						"min": "2.6rem",
						"max": "3.5rem"
					}
				}
			],
			"fontStyle": true,
			"fontWeight": true,
			"letterSpacing": true,
			"lineHeight": true,
			"textColumns": true
		},
		"blocks": {
			"core/post-content": {
				"spacing": {
					"margin": {
						"top": "0"
					}
				}
			}
		}
	},
	"styles": {
		"color": {
			"background": "var:preset|color|background",
			"text": "var:preset|color|foreground"
		},
		"elements": {
			"link": {
				"color": {
					"text": "var:preset|color|accent"
				}
			},
			"button": {
				"typography": {
					"fontFamily": "var:preset|font-family|arial-sans",
					"fontWeight": "600"
				},
				"border": {
					"radius": "999px"
				},
				"color": {
					"text": "var:preset|color|background",
					"background": "var:preset|color|accent"
				}
			},
			"heading": {
				"typography": {
					"fontFamily": "var:preset|font-family|arial-sans",
					"fontWeight": "700",
					"lineHeight": "1.2"
				}
			}
		},
		"typography": {
			"fontFamily": "var:preset|font-family|arial-sans",
			"fontSize": "clamp(1rem, 1.1vw + 0.8rem, 1.15rem)",
			"lineHeight": "1.65"
		},
		"spacing": {
			"padding": {
				"top": "0",
				"right": "1.5rem",
				"bottom": "0",
				"left": "1.5rem"
			}
		},
		"blocks": {
			"core/paragraph": {
				"typography": {
					"fontSize": "clamp(1.05rem, 1.2vw + 0.8rem, 1.2rem)"
				}
			},
			"core/post-title": {
				"typography": {
					"fontFamily": "var:preset|font-family|arial-sans",
					"fontSize": "clamp(2.5rem, 5vw, 3.6rem)",
					"fontWeight": "700",
					"lineHeight": "1.1"
				},
				"spacing": {
					"margin": {
						"bottom": "1.5rem"
					}
				}
			},
			"core/quote": {
				"typography": {
					"fontFamily": "var:preset|font-family|arial-serif",
					"fontSize": "clamp(1.4rem, 2.4vw, 2rem)",
					"lineHeight": "1.5",
					"fontStyle": "italic"
				},
				"color": {
					"text": "var:preset|color|foreground"
				},
				"border": {
					"left": {
						"color": "var:preset|color|accent",
						"width": "3px"
					}
				},
				"spacing": {
					"padding": {
						"left": "1.5rem"
					}
				}
			},
			"core/code": {
				"typography": {
					"fontFamily": "var:preset|font-family|mono",
					"fontSize": "0.95rem"
				},
				"color": {
					"text": "var:preset|color|foreground",
					"background": "var:preset|color|surface"
				},
				"spacing": {
					"padding": {
						"top": "0.75rem",
						"right": "1rem",
						"bottom": "0.75rem",
						"left": "1rem"
					}
				},
				"border": {
					"radius": "8px"
				}
			}
		}
	},
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		}
	],
	"customTemplates": [
		{
			"name": "front-page",
			"title": "Front Page"
		}
	]
}
