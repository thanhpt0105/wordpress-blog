{
	"$schema": "https://schemas.wp.org/wp/6.4/theme.json",
	"version": 3,
	"settings": {
		"appearanceTools": true,
		"custom": {
			"toggleDefaults": {
				"darkMode": true,
				"readingProgress": true,
				"tableOfContents": true,
				"copyHeadings": true,
				"readingTime": "minutes"
			}
		},
		"color": {
			"duotone": [],
			"gradients": [],
			"defaultPalette": false,
			"palette": [
				{ "slug": "primary", "name": "Primary", "color": "#1f3a93" },
				{ "slug": "accent", "name": "Accent", "color": "#ff7f50" },
				{ "slug": "neutral-0", "name": "Neutral 0", "color": "#ffffff" },
				{ "slug": "neutral-5", "name": "Neutral 5", "color": "#f6f7fb" },
				{ "slug": "neutral-10", "name": "Neutral 10", "color": "#edf0f7" },
				{ "slug": "neutral-40", "name": "Neutral 40", "color": "#9aa3b5" },
				{ "slug": "neutral-60", "name": "Neutral 60", "color": "#646a76" },
				{ "slug": "neutral-80", "name": "Neutral 80", "color": "#393e4a" },
				{ "slug": "neutral-100", "name": "Neutral 100", "color": "#191c24" },
				{ "slug": "success", "name": "Success", "color": "#2ecc71" },
				{ "slug": "warning", "name": "Warning", "color": "#f39c12" },
				{ "slug": "danger", "name": "Danger", "color": "#e74c3c" }
			]
		},
		"layout": {
			"contentSize": "720px",
			"wideSize": "1080px"
		},
		"spacing": {
			"defaultSpacingSizes": false,
			"spacingScale": {
				"steps": 7,
				"mediumStep": 1.25,
				"unit": "rem"
			},
			"spacingSizes": [
				{ "slug": "xxs", "size": "0.25rem", "name": "Space 2" },
				{ "slug": "xs", "size": "0.5rem", "name": "Space 4" },
				{ "slug": "sm", "size": "1rem", "name": "Space 8" },
				{ "slug": "md", "size": "1.5rem", "name": "Space 12" },
				{ "slug": "lg", "size": "2rem", "name": "Space 16" },
				{ "slug": "xl", "size": "3rem", "name": "Space 24" },
				{ "slug": "xxl", "size": "4rem", "name": "Space 32" }
			]
		},
		"shadow": {
			"defaultPresets": false,
			"presets": [
				{
					"slug": "soft",
					"name": "Soft",
					"shadow": "0 18px 40px rgba(9, 14, 35, 0.12)"
				},
				{
					"slug": "medium",
					"name": "Medium",
					"shadow": "0 32px 60px rgba(9, 14, 35, 0.18)"
				}
			]
		},
		"typography": {
			"defaultFontSizes": false,
			"fluid": true,
			"fontFamilies": [
				{
					"slug": "system",
					"name": "System Sans",
					"fontFamily": "-apple-system, BlinkMacSystemFont, \"Segoe UI\", \"Noto Sans\", Helvetica, Arial, sans-serif, \"Apple Color Emoji\", \"Segoe UI Emoji\""
				},
				{
					"slug": "system-serif",
					"name": "System Serif",
					"fontFamily": "\"Georgia\", \"Iowan Old Style\", \"Apple Garamond\", \"Times New Roman\", serif"
				},
				{
					"slug": "system-mono",
					"name": "System Mono",
					"fontFamily": "\"SFMono-Regular\", \"Menlo\", \"Monaco\", Consolas, \"Liberation Mono\", \"Courier New\", monospace"
				}
			],
			"fontSizes": [
				{ "slug": "caption", "size": "0.75rem", "name": "Caption" },
				{ "slug": "small", "size": "0.875rem", "name": "Small" },
				{ "slug": "body", "size": "1rem", "name": "Body" },
				{ "slug": "lead", "size": "1.25rem", "name": "Lead" },
				{ "slug": "h6", "size": "1.125rem", "name": "Heading 6" },
				{ "slug": "h5", "size": "1.375rem", "name": "Heading 5" },
				{ "slug": "h4", "size": "1.75rem", "name": "Heading 4" },
				{ "slug": "h3", "size": "2.25rem", "name": "Heading 3" },
				{ "slug": "h2", "size": "3rem", "name": "Heading 2" },
				{ "slug": "h1", "size": "3.5rem", "name": "Heading 1" },
				{ "slug": "display", "size": "4.5rem", "name": "Display" }
			],
			"letterSpacing": {
				"tiny": "-0.01em",
				"small": "-0.005em",
				"medium": "0em",
				"large": "0.03em"
			}
		},
		"blocks": {
			"core/button": {
				"spacing": {
					"padding": {
						"top": "0.75rem",
						"bottom": "0.75rem",
						"left": "1.5rem",
						"right": "1.5rem"
					}
				},
				"border": {
					"radius": "999px"
				},
				"typography": {
					"fontWeight": "600",
					"letterSpacing": "0.04em",
					"textTransform": "uppercase"
				}
			},
			"core/navigation": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--system)",
					"fontSize": "0.9375rem"
				},
				"spacing": {
					"blockGap": "1.5rem"
				}
			},
			"core/post-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--h1)",
					"fontFamily": "var(--wp--preset--font-family--system)"
				}
			},
			"core/quote": {
				"border": {
					"color": "var(--wp--preset--color--primary)",
					"width": "4px"
				},
				"spacing": {
					"padding": {
						"top": "1.5rem",
						"bottom": "1.5rem",
						"left": "2rem",
						"right": "2rem"
					}
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--lead)",
					"fontStyle": "italic"
				}
			},
			"core/table": {
				"border": {
					"color": "var(--wp--preset--color--neutral-80)"
				},
				"color": {
					"text": "var(--wp--preset--color--neutral-80)"
				}
			}
		},
		"elements": {
			"button": {
				"border": {
					"radius": "999px"
				}
			},
			"heading": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--system)",
					"lineHeight": "1.2"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--accent)"
					}
				}
			}
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--neutral-0)",
			"text": "var(--wp--preset--color--neutral-80)"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--system)",
			"fontSize": "var(--wp--preset--font-size--body)",
			"lineHeight": "1.6"
		},
		"spacing": {
			"blockGap": "var(--wp--preset--spacing--sm)"
		},
		"blocks": {
			"core/group": {
				"spacing": {
					"blockGap": "var(--wp--preset--spacing--sm)"
				}
			},
			"core/code": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--system-mono)",
					"fontSize": "0.95rem",
					"lineHeight": "1.5"
				},
				"spacing": {
					"padding": {
						"top": "1rem",
						"bottom": "1rem",
						"left": "1rem",
						"right": "1rem"
					}
				},
				"border": {
					"radius": "0.75rem",
					"color": "var(--wp--preset--color--neutral-10)"
				},
				"color": {
					"background": "var(--wp--preset--color--neutral-5)"
				}
			},
			"core/post-comments-form": {
				"spacing": {
					"blockGap": "var(--wp--preset--spacing--sm)"
				},
				"border": {
					"radius": "0.75rem"
				},
				"color": {
					"background": "var(--wp--preset--color--neutral-5)"
				}
			},
			"core/image": {
				"border": {
					"radius": "1rem"
				}
			}
		}
	},
	"customTemplates": [
		{
			"name": "link-in-bio",
			"title": "Link In Bio",
			"postTypes": [
				"page"
			]
		}
	],
	"templateParts": [
		{
			"name": "header",
			"title": "Default Header",
			"area": "header"
		},
		{
			"name": "header-transparent",
			"title": "Transparent Header",
			"area": "header"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		},
		{
			"name": "sidebar",
			"title": "Sidebar",
			"area": "uncategorized"
		},
		{
			"name": "post-meta",
			"title": "Post Meta",
			"area": "uncategorized"
		},
		{
			"name": "toc",
			"title": "Table of Contents",
			"area": "uncategorized"
		},
		{
			"name": "newsletter",
			"title": "Newsletter CTA",
			"area": "uncategorized"
		}
	],
	"patterns": [
		"custom-theme-2/home-hero",
		"custom-theme-2/latest-posts-list",
		"custom-theme-2/latest-posts-grid",
		"custom-theme-2/featured-post",
		"custom-theme-2/series-index",
		"custom-theme-2/about-author",
		"custom-theme-2/newsletter-signup",
		"custom-theme-2/callout-note-warning",
		"custom-theme-2/gallery-lightbox",
		"custom-theme-2/link-in-bio",
		"custom-theme-2/footer-classic",
		"custom-theme-2/footer-minimal"
	]
}
